{
  "name": "Grand Migrator",
  "description": "Grand Migrator for Merchandise Conversion",
  "version": "alpha.0.0.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {              
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "default_title": "Click Me",   
    "default_popup": "options/options.html"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>" 
      ],
      "js": ["content/main.js"]
    }
  ]
}